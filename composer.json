{
    "name": "eclipxe/buzoncfdi-cfdireader",
    "description": "Library to read and validate a Mexican CFDI 3.2 and 3.3 (Comprobante Fiscal por Internet)",
    "keywords": ["cfdi", "cfdi3.2", "cfdi3.3", "mexico", "sat"],
    "homepage": "https://github.com/eclipxe13/buzoncfdi-cfdireader",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos C Soto",
            "email": "eclipxe13@gmail.com"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        }
    },
    "require": {
        "php": ">=7.0",
        "eclipxe/xmlschemavalidator": "^2.0",
        "eclipxe/xmlresourceretriever": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "squizlabs/php_codesniffer": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "CFDIReader\\": "src/CFDIReader/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CFDIReaderTests\\": "tests/CFDIReaderTests/"
        }
    }
}
